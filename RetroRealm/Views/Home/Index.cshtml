@{
    string[] adminPerms = { "Manage Technicians", "Manage Customers", "Manage Incidents", "Registrations" };
    string[] techPerms = {"Update Incident"};
    ViewData["Title"] = "Home";
}

<h2 class="fs-1">RetroRealm Technical Support</h2>
<p class="fw-bold">Retro Game management software for the gaming enthusiasts</p>

<div class="mt-3">
    <h3 class="fs-1">Admin</h3>
    <ul class="list-group">
        <a class="list-group-item list-group-item-action" asp-controller="Game" asp-action="ManageGames">Manage Products</a>
        @foreach (string permission in adminPerms)
        {
            <a href="#" class="list-group-item list-group-item-action">@permission</a>
        }
    </ul>
</div><div class="mt-3">
    <h3 class="fs-1">Technicians</h3>
    <ul class="list-group">
        @foreach (string permission in techPerms)
        {
            <a href="#" class="list-group-item list-group-item-action">@permission</a>
        }
    </ul>
</div>
