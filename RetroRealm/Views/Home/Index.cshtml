@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Home";
}

<h2 class="fs-1">RetroRealm Technical Support</h2>
<p class="fw-bold">Retro Game management software for the gaming enthusiasts</p>

<div class="mt-3">
    <h3 class="fs-1">Admin</h3>
    <ul class="list-group">
        @if (User.IsInRole("Admin"))
        {
            <a class="list-group-item list-group-item-action" asp-controller="Game" asp-action="ManageGames">Manage Products</a>
        }
        <a class="list-group-item list-group-item-action" asp-controller="Technician" asp-action="List">Manage Technicians</a>
        <a class="list-group-item list-group-item-action" asp-controller="Customer" asp-action="List">Manage Customers</a>
        <a class="list-group-item list-group-item-action" asp-controller="Incident" asp-action="List">Manage Incidents</a>
        <a class="list-group-item list-group-item-action" asp-controller="Registration" asp-action="Index">Registrations</a>
    </ul>
</div>
@if (SignInManager.IsSignedIn(User))
{
    <div class="mt-3">
        <h3 class="fs-1">Technicians</h3>
        <ul class="list-group">
            <a class="list-group-item list-group-item-action" asp-controller="TechIncident" asp-action="Index">Update Incident</a>
        </ul>
    </div>
}

